/* pages/list/list.wxss */
.xq{
      width: 100%;
}
.height{
      height: 750rpx;
}

.conent{
      width: 100%;
      padding: 20rpx 20rpx 100rpx 20rpx;
}
.conent text{
      font-size:34rpx;
}
.conent .js{
      color: rgb(117, 112, 112);
      font-size: 34rpx;
      padding: 10rpx 0;
}
.conent .price{
      color: orangered;
      padding: 10rpx 0;
}
.conent .title{
      text-align: center;
      padding: 20rpx 0;
}

.footer {
      width: 100%;
      height: 100rpx;
      position: fixed;
      bottom: 0;
}

.footer .footer-items {
      float: left;
      width: 25%;
      height: 100rpx;
      color: #fff;
      text-align: center;
      line-height: 100rpx;
      font-size: 30rpx;
}

.footer .footer-items .footer-icon {
      width: 60rpx;
      height: 60rpx;
      
      position: relative;
      margin: 16rpx auto;
}

.footer .footer-items .footer-icon image {
      width: 60rpx;
      height: 60rpx;
}
.footer .footer-items .footer-icon text{
      position: absolute;
      top: -4rpx;
      right: -14rpx;
      width: 30rpx;
      height: 30rpx;
      background-color: red;
      text-align: center;
      line-height: 30rpx;
      border-radius: 50%;
      font-size: 20rpx;
}
.footer .footer-items:nth-child(1){
      background-color: white;
}
.footer .footer-items:nth-child(2){
      background-color: orange;
}
.footer .footer-items:nth-child(3){
      background-color: skyblue;
}
.footer .footer-items:nth-child(4){
      background-color: springgreen;
}